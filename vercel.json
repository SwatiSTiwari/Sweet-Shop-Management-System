{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "server/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ]
}