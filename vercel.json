{
  "version": 2,
  "builds": [
    {
      "src": "server/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "tsconfig.server.json"],
        "use": "@vercel/node"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.ts"
    }
  ],
  "functions": {
    "server/server.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  }
}